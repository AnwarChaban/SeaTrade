CREATE TABLE IF NOT EXISTS Company (
ID CHAR(36) NOT NULL,
CompanyName VARCHAR(255) NOT NULL,
Guthaben INT,
PRIMARY KEY (ID));

CREATE TABLE IF NOT EXISTS Hafen (
HafenName VARCHAR(255) NOT NULL,
Koordinaten VARCHAR(30) NOT NULL,
PRIMARY KEY (HafenName));

CREATE TABLE IF NOT EXISTS Schiffe (
ID CHAR(36) NOT NULL,
SchiffName VARCHAR(255) NOT NULL,
CompanyID CHAR(36) NOT NULL,
HafenName VARCHAR(255) NOT NULL,
FOREIGN KEY (CompanyID) REFERENCES Company(ID),
FOREIGN KEY (HafenName) REFERENCES Hafen(HafenName),
PRIMARY KEY (ID));

CREATE TABLE IF NOT EXISTS Ladungen (
ID CHAR(36) NOT NULL,
Wert INT NOT NULL
IsAvailablle BOOLEAN, 
StartHafen VARCHAR(255) NOT NULL,
ZielHafen VARCHAR(255) NOT NULL,
FOREIGN KEY (StartHafen) REFERENCES hafen(HafenName),
FOREIGN KEY (ZielHafen) REFERENCES Hafen(HafenName),
PRIMARY KEY (ID));



