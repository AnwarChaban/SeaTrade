CREATE TABLE Company (
ID INT NOT NULL,
CompanyName VARCHAR(255) NOT NULL,
Guthaben INT,
PRIMARY KEY (ID));

CREATE TABLE Hafen (
ID INT NOT NULL,
HafenName VARCHAR(255) NOT NULL,
PRIMARY KEY (ID));

CREATE TABLE Schiffe (
ID INT NOT NULL,
SchiffName VARCHAR(255) NOT NULL,
CompanyID INT NOT NULL,
HafenID INT NOT NULL,
FOREIGN KEY (CompanyID) REFERENCES Company(ID),
FOREIGN KEY (HafenID) REFERENCES Hafen(ID),
PRIMARY KEY (ID));

CREATE TABLE Ladungen (
ID INT NOT NULL,
Wert INT NOT NULL
IsAvailablle BOOLEAN, 
StartHafen INT NOT NULL,
ZielHafen INT NOT NULL,
FOREIGN KEY (StartHafen) REFERENCES hafen(ID),
FOREIGN KEY (ZielHafen) REFERENCES Hafen(ID),
PRIMARY KEY (ID));



